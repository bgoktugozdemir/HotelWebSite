@model WebProje.Areas.Admin.Models.SettingManagement.ShowSettingViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="user-data m-b-30">
    <div class="table-data__tool">
        <div class="table-data__tool-left">
            <h3 class="title-3">
                <i class="zmdi zmdi-settings"></i>user data
            </h3>
        </div>
        <div class="table-data__tool-right">
            <h3 class="title-3">
                <a href="@Url.Action("NewSetting", "SettingManagement")" class="au-btn au-btn-icon au-btn--green au-btn--small">
                    <i class="zmdi zmdi-plus"></i>Add New Setting
                </a>
            </h3>
        </div>
    </div>
    <div class="table-responsive table-data">
        <table class="table">
            <thead>
                <tr>
                    <td>name</td>
                    <td>keyword</td>
                    <td>value</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var setting in Model.SettingList)
                {
                    <tr>
                        <td>
                            <span class="role admin">@setting.Name</span>
                        </td>
                        <td>
                            <span class="role user">@setting.Keyword</span>
                        </td>
                        <td>
                            <span class="role member">@setting.Value</span>
                        </td>
                        <td>
                            <span class="more">
                                <a href="@Url.Action("NewSetting","SettingManagement", new { id=setting.ID})"><i class="zmdi zmdi-more"></i></a>
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Style
{
    <style>
        .table-data {
            height: 600px !important;
        }
        .role {
            text-transform: none;
        }
    </style>
}
